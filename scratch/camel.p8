pico-8 cartridge // http://www.pico-8.com
version 36
__lua__

leader_x = 30
leader_y = 30
leader_dir = 1 

t = 0

::_::
cls(0)

flipped = leader_dir > 0
for i=0,4 do
    x = leader_x + leader_dir * i * 12
    x += 3.5 * sin(0.1 * i + t / 200)
    y = leader_y
    a = 1.5 * sin(0.125 * i + t/15)
    y += a*a
    
    spr(1, x, y, 1, 1, flipped)
end

leader_x += leader_dir
t += 1
flip()
goto _



