pico-8 cartridge // http://www.pico-8.com
version 36
__lua__

::loop::

  x = rnd(128)
  y = rnd(128)

  d2 = (x-64)*(x-64)+(y-64)*(y-64)
  if abs(d2-1024) < 128 then
    local angle = -0.25
    local tx = cos(angle)
    local ty = sin(angle)

    local dx = (x - 64) / 32
    local dy = (y - 64) / 32

    local dot = tx * dx + ty * dy
    local k = (dot + 1)  * 0.5
    col = (rnd() < k) and 14 or 15
  else
    col = 1
  end

  circ(x, y, 1, col)

goto loop


